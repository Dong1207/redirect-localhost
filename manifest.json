{
    "name": "Localhost Redirect",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Redirect requests from specific domains to localhost for testing",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "webRequest"
    ],
    "optional_permissions": [
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    }
}